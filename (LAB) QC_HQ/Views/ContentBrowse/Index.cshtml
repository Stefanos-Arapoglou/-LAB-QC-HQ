            min-width: 70px;
        }
    }
</style>

@functions {
    // Helper function to get badge class based on content type
    string GetContentTypeBadgeClass(string contentType)
    {
        return contentType switch
        {
            "Know-How" => "bg-knowhow",
            "Educational" => "bg-educational",
            "Announcement" => "bg-announcement",
            "File" => "bg-file",
            _ => "bg-secondary"
        };
    }

    // Helper function to get card color class based on content type
    string GetCardColorClass(string contentType)
    {
        return contentType switch
        {
            "Know-How" => "card-knowhow",
            "Educational" => "card-educational",
            "Announcement" => "card-announcement",
            "File" => "card-file",
            _ => "card-other"
        };
    }
}