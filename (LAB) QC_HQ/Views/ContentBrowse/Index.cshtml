@model IEnumerable<_LAB__QC_HQ.Models.Content>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 h4 fw-bold text-dark">Available Content</h2>

        <!-- View Toggle and Stats -->
        <div class="d-flex align-items-center gap-3">
            <!-- View Toggle -->
            <div class="btn-group btn-group-sm" role="group">
                <button type="button" id="cardViewBtn" class="btn btn-outline-primary active">
                    <i class="bi bi-grid-3x3-gap"></i> Cards
                </button>
                <button type="button" id="tableViewBtn" class="btn btn-outline-secondary">
                    <i class="bi bi-table"></i> Table
                </button>
            </div>

            <!-- Quick Stats -->
            <div class="text-muted">
                <span class="badge bg-light text-dark border">@Model.Count() Total</span>
                <span class="badge bg-success ms-2">@Model.Count(c => c.IsActive) Active</span>
                @if (User.IsInRole("Admin"))
                {
                    <span class="badge bg-secondary ms-2">@Model.Count(c => !c.IsActive) Inactive</span>
                }
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" id="searchBox" class="form-control form-control-sm" placeholder="Search content...">
        </div>
        <div class="col-md-3">
            <select id="typeFilter" class="form-select form-select-sm">
                <option value="">All Types</option>
                <option value="Know-How">Know-How</option>
                <option value="Educational">Educational</option>
                <option value="Announcement">Announcement</option>
                <option value="File">File</option>
            </select>
        </div>
        <div class="col-md-3">
            <div class="d-flex gap-2 align-items-center">
                @if (User.IsInRole("Admin"))
                {
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="showInactive" checked>
                        <label class="form-check-label small" for="showInactive">Show Inactive</label>
                    </div>
                }
                <button id="clearFilters" class="btn btn-outline-secondary btn-sm ms-auto">
                    <i class="bi bi-x-circle"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- CARD VIEW -->
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-3" id="cardView">
        @foreach (var content in Model.OrderByDescending(c => c.CreatedAt))
        {
            bool isActive = content.IsActive;
            string cardColorClass = GetCardColorClass(content.ContentType);

            <div class="col content-card"
                 data-title="@content.Title.ToLower()"
                 data-type="@content.ContentType"
                 data-departments="@string.Join(",", content.ContentDepartments.Select(cd => cd.Department.Name.ToLower()))"
                 data-active="@isActive.ToString().ToLower()">

                <div class="card h-100 shadow-sm content-card-item @cardColorClass @(!isActive ? "inactive-content" : "")"
                     onclick="window.location.href='@Url.Action("Details", "ContentBrowse", new { id = content.ContentId })'"
                     style="cursor: pointer;">

                    <div class="card-header bg-transparent border-bottom py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Content Type Badge -->
                            <span class="badge @GetContentTypeBadgeClass(content.ContentType)" style="font-size: 0.65rem; padding: 0.25rem 0.5rem;">
                                @content.ContentType
                            </span>

                            <!-- Admin Action Buttons - Minimal -->
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group" role="group" onclick="event.stopPropagation();">
                                    <!-- Edit Button -->
                                    <a asp-controller="ContentBrowse"
                                       asp-action="Edit"
                                       asp-route-id="@content.ContentId"
                                       class="btn btn-outline-dark btn-sm px-2 py-1"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <!-- Active/Deactivate Button -->
                                    @if (isActive)
                                    {
                                        <form asp-controller="ContentBrowse"
                                              asp-action="Deactivate"
                                              asp-route-id="@content.ContentId"
                                              method="post"
                                              onsubmit="return confirm('Deactivate this content?');"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-dark btn-sm px-2 py-1" title="Deactivate">
                                                <i class="bi bi-eye-slash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-controller="ContentBrowse"
                                              asp-action="Activate"
                                              asp-route-id="@content.ContentId"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-dark btn-sm px-2 py-1" title="Activate">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            }
                            else
                            {
                                <!-- Status Indicator for non-admins -->
                                @if (!isActive)
                                {
                                    <span class="badge bg-warning text-dark" style="font-size: 0.65rem; padding: 0.25rem 0.5rem;">
                                        <i class="bi bi-eye-slash"></i>
                                    </span>
                                }
                            }
                        </div>
                    </div>

                    <div class="card-body p-3">
                        <!-- Title -->
                        <h6 class="card-title mb-2 @(!isActive ? "text-muted" : "")"
                            style="font-size: 0.9rem; line-height: 1.3; height: 2.6rem; overflow: hidden;">
                            @content.Title
                        </h6>

                        <!-- Departments - First Line -->
                        <div class="mb-1">
                            @foreach (var cd in content.ContentDepartments.Take(4))
                            {
                                <span class="badge clearance-level-@cd.ClearanceLevelRequired me-1 mb-1"
                                      style="font-size: 0.6rem; padding: 0.2rem 0.4rem;"
                                      title="@cd.Department.Name - Clearance Level @cd.ClearanceLevelRequired">
                                    @cd.Department.Name
                                </span>
                            }
                        </div>

                        <!-- Departments - Second Line (if more than 4) -->
                        @if (content.ContentDepartments.Count > 4)
                        {
                            <div class="mb-2">
                                @foreach (var cd in content.ContentDepartments.Skip(4).Take(4))
                                {
                                    <span class="badge clearance-level-@cd.ClearanceLevelRequired me-1 mb-1"
                                          style="font-size: 0.6rem; padding: 0.2rem 0.4rem;"
                                          title="@cd.Department.Name - Clearance Level @cd.ClearanceLevelRequired">
                                        @cd.Department.Name
                                    </span>
                                }
                                @if (content.ContentDepartments.Count > 8)
                                {
                                    <span class="badge bg-light text-dark border" style="font-size: 0.6rem; padding: 0.2rem 0.4rem;">
                                        +@(content.ContentDepartments.Count - 8)
                                    </span>
                                }
                            </div>
                        }

                        <!-- Metadata -->
                        <div class="small text-muted mb-2">
                            <div class="d-flex justify-content-between">
                                <span title="Number of items">
                                    <i class="bi bi-files"></i> @content.Items.Count
                                </span>
                                <span title="Times viewed">
                                    <i class="bi bi-eye"></i> @content.TimesViewed
                                </span>
                            </div>
                        </div>

                        <!-- Creator and Date -->
                        <div class="border-top pt-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-truncate" style="max-width: 60%;" title="@content.CreatedByNavigation?.UserName">
                                    <i class="bi bi-person"></i> @content.CreatedByNavigation?.UserName
                                </small>
                                <small title="@content.CreatedAt.ToString("MMM dd, yyyy")">
                                    @content.CreatedAt.ToString("MMM dd")
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Hover indicator -->
                    <div class="card-footer bg-transparent border-top-0 py-1">
                        <small class="text-primary text-center d-block">
                            <i class="bi bi-arrow-right"></i> Click to view details
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- TABLE VIEW (Initially Hidden) -->
    <div id="tableView" class="d-none">
        <div class="table-responsive">
            <table class="table table-hover table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Departments</th>
                        <th>Items</th>
                        <th>Views</th>
                        <th>Created By</th>
                        <th>Date</th>
                        <th>Status</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th class="text-end">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var content in Model.OrderByDescending(c => c.CreatedAt))
                    {
                        bool isActive = content.IsActive;

                        <tr class="@(!isActive ? "table-secondary" : "")"
                            onclick="window.location.href='@Url.Action("Details", "ContentBrowse", new { id = content.ContentId })'"
                            style="cursor: pointer;">

                            <td>
                                <div class="fw-semibold">@content.Title</div>
                                <small class="text-muted">@content.ContentId</small>
                            </td>

                            <td>
                                <span class="badge @GetContentTypeBadgeClass(content.ContentType)">
                                    @content.ContentType
                                </span>
                            </td>

                            <td>
                                <div class="d-flex flex-wrap gap-1" style="max-width: 200px;">
                                    @foreach (var cd in content.ContentDepartments)
                                    {
                                        <span class="badge clearance-level-@cd.ClearanceLevelRequired"
                                              title="@cd.Department.Name - Clearance Level @cd.ClearanceLevelRequired">
                                            @cd.Department.Name
                                        </span>
                                    }
                                </div>
                            </td>

                            <td>
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-files"></i> @content.Items.Count
                                </span>
                            </td>

                            <td>
                                <small class="text-muted">@content.TimesViewed</small>
                            </td>

                            <td>
                                <small>@content.CreatedByNavigation?.UserName</small>
                            </td>

                            <td>
                                <small>@content.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </td>

                            <td>
                                @if (isActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-eye-slash"></i> Inactive
                                    </span>
                                }
                            </td>

                            @if (User.IsInRole("Admin"))
                            {
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group" onclick="event.stopPropagation();">
                                        <a asp-controller="ContentBrowse"
                                           asp-action="Edit"
                                           asp-route-id="@content.ContentId"
                                           class="btn btn-outline-primary btn-sm"
                                           title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        @if (isActive)
                                        {
                                            <form asp-controller="ContentBrowse"
                                                  asp-action="Deactivate"
                                                  asp-route-id="@content.ContentId"
                                                  method="post"
                                                  onsubmit="return confirm('Deactivate this content?');"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-warning btn-sm" title="Deactivate">
                                                    <i class="bi bi-eye-slash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-controller="ContentBrowse"
                                                  asp-action="Activate"
                                                  asp-route-id="@content.ContentId"
                                                  method="post"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Activate">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3">No content available</h4>
            <p class="text-muted">There are no content items at the moment.</p>
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="KnowHow" asp-action="Create" class="btn btn-primary btn-sm mt-2">
                    <i class="bi bi-plus-circle"></i> Create New Content
                </a>
            }
        </div>
    }
</div>

<!-- JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchBox = document.getElementById('searchBox');
        const typeFilter = document.getElementById('typeFilter');
        const showInactive = document.getElementById('showInactive');
        const clearFilters = document.getElementById('clearFilters');
        const cardViewBtn = document.getElementById('cardViewBtn');
        const tableViewBtn = document.getElementById('tableViewBtn');
        const cardView = document.getElementById('cardView');
        const tableView = document.getElementById('tableView');
        const contentCards = document.querySelectorAll('.content-card');
        const tableRows = document.querySelectorAll('#tableView tbody tr');

        // View Toggle
        cardViewBtn.addEventListener('click', function() {
            cardViewBtn.classList.add('btn-outline-primary', 'active');
            cardViewBtn.classList.remove('btn-outline-secondary');
            tableViewBtn.classList.add('btn-outline-secondary');
            tableViewBtn.classList.remove('btn-outline-primary', 'active');
            cardView.classList.remove('d-none');
            tableView.classList.add('d-none');
        });

        tableViewBtn.addEventListener('click', function() {
            tableViewBtn.classList.add('btn-outline-primary', 'active');
            tableViewBtn.classList.remove('btn-outline-secondary');
            cardViewBtn.classList.add('btn-outline-secondary');
            cardViewBtn.classList.remove('btn-outline-primary', 'active');
            tableView.classList.remove('d-none');
            cardView.classList.add('d-none');
        });

        // Search function
        searchBox.addEventListener('keyup', function() {
            filterContent();
        });

        // Type filter
        typeFilter.addEventListener('change', function() {
            filterContent();
        });

        // Show inactive toggle (for admins)
        if (showInactive) {
            showInactive.addEventListener('change', function() {
                filterContent();
            });
        }

        // Clear filters
        clearFilters.addEventListener('click', function() {
            searchBox.value = '';
            typeFilter.value = '';
            if (showInactive) showInactive.checked = true;
            filterContent();
        });

        function filterContent() {
            const searchTerm = searchBox.value.toLowerCase();
            const selectedType = typeFilter.value;
            const showInactiveChecked = showInactive ? showInactive.checked : true;

            // Filter cards
            contentCards.forEach(card => {
                const title = card.dataset.title;
                const type = card.dataset.type;
                const departments = card.dataset.departments;
                const isActive = card.dataset.active === 'true';

                let matchesSearch = true;
                let matchesType = true;
                let matchesActiveFilter = true;

                // Check search term
                if (searchTerm) {
                    matchesSearch = title.includes(searchTerm) ||
                                   departments.includes(searchTerm);
                }

                // Check type filter
                if (selectedType) {
                    matchesType = type === selectedType;
                }

                // Check active filter (for admins)
                if (!showInactiveChecked && !isActive) {
                    matchesActiveFilter = false;
                }

                // Show/hide card
                if (matchesSearch && matchesType && matchesActiveFilter) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });

            // Filter table rows
            tableRows.forEach(row => {
                const title = row.cells[0].textContent.toLowerCase();
                const type = row.cells[1].textContent.trim();
                const departments = row.cells[2].textContent.toLowerCase();
                const isActive = row.cells[7].textContent.includes('Active');

                let matchesSearch = true;
                let matchesType = true;
                let matchesActiveFilter = true;

                // Check search term
                if (searchTerm) {
                    matchesSearch = title.includes(searchTerm) ||
                                   departments.includes(searchTerm);
                }

                // Check type filter
                if (selectedType) {
                    matchesType = type === selectedType;
                }

                // Check active filter (for admins)
                if (!showInactiveChecked && !isActive) {
                    matchesActiveFilter = false;
                }

                // Show/hide row
                if (matchesSearch && matchesType && matchesActiveFilter) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Initialize
        filterContent();
    });
</script>

