@model IEnumerable<_LAB__QC_HQ.Models.Content>

<h2>Content List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Type</th>
            <th>Departments / Clearance</th>
            <th>Created By</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var content in Model)
        {
            <tr>
                <td>@content.ContentId</td>
                <td>@content.Title</td>
                <td>@content.ContentType</td>

                <td>
                    <ul class="mb-0">
                        @foreach (var cd in content.ContentDepartments)
                        {
                            <li>
                                <strong>@cd.Department.Name</strong>
                                (Clearance: @cd.ClearanceLevelRequired)
                            </li>
                        }
                    </ul>
                </td>

                <td>@content.CreatedByNavigation.UserName</td>
                <td>@content.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>