@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Roles Management</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
    <a asp-action="Assign" class="btn btn-secondary">Assign Role to User</a>
    <a asp-action="Users" class="btn btn-info">View Users & Roles</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    @if (role.Name !="Admin" && role.Name!="User") {
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-warning">Delete</a>                
                    }
                    else
                    {
                      <span class="text-muted">Can not delete this role</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>