@model _LAB__QC_HQ.Models.ViewModels.EditKnowHowViewModel

@{
    ViewData["Title"] = "Edit Know-How";
}

<h2>Edit Know-How</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <!-- Basic Content Info -->
    <partial name="_ContentEditBase" model="Model" />

    <!-- Departments Section -->
    <partial name="_DepartmentsEditor" model="Model" />

    <!-- KnowHow-specific fields -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Code" class="form-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="RiskLevel" class="form-label"></label>
                        <select asp-for="RiskLevel" class="form-select">
                            <option value="1">Low</option>
                            <option value="2">Medium</option>
                            <option value="3">High</option>
                            <option value="4">Critical</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>Content Items</h4>
        </div>
        <div class="card-body">
            <partial name="_ItemsEditor2" model="Model" />
        </div>
    </div>

    <!-- Form Actions -->
    <div class="d-flex justify-content-between">
        <a href="@Url.Action("Details", new { id = Model.ContentId })" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Details
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initItemsEditor("items-container", "add-item");

            // If you want to pre-load departments options
            setDepartmentsOptions(`
                @foreach (var dep in ViewBag.Departments)
                {
                        <option value="@dep.DepartmentId">@dep.Name</option>
                }
            `);
        });

        window.departmentsOptions = `
            @foreach (var dep in ViewBag.Departments)
            {
                    <option value="@dep.DepartmentId">@dep.Name</option>
            }
        `;
    </script>

    <script src="~/js/departments-editor.js"></script>
    <script src="~/js/content-items.js"></script>
    <!-- Include SortableJS for drag & drop -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

    <!-- Include Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Include our items editor script -->
    <script src="~/js/content-items2.js"></script>
    }
